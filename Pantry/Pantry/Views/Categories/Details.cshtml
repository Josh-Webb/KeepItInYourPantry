@model Pantry.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
</div>

@foreach (var model in Model.Ingredients)
{<div class="card" style="width: 18em;">
     <div class="card-body">
         <h5 class="card-title">
             @Html.DisplayFor(modelItem => model.Title)
         </h5>  
         <h6 class="card-subtitle mb-2 text-muted">
                 @Html.DisplayFor(modelItem => model.Quantity)
         </h6>
         @Html.ActionLink("Details", "Details", "Ingredients", new { id = model.IngredientId }, new { @class = "btn btn-primary stretched-link"})
     </div>
</div>
 
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



