@model Pantry.Models.SpoonacularViewModels.RecipeDetailsView

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>RecipeDetailsView</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadyInMinutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadyInMinutes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servings)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <img src="@Url.Content($"https://spoonacular.com/recipeImages/{Model.Id}-480x360.{Model.ImageType}")" />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageType)
        </dd>
    </dl>

    @foreach (var model in Model.ExtendedIngredients)
{
            <div>
                <img src="@Url.Content($"https://spoonacular.com/cdn/ingredients_100x100/{model.Image}")" />
            <br />
                @Html.DisplayFor(modelItem => model.OriginalString)
            </div>
}

    @foreach (var model in Model.AnalyzedInstructions)
    {
        @foreach (var modelItem in model.Steps)

        { 
        <div>
            @Html.DisplayFor(stepItem => modelItem.Number)
            <br />
            @Html.DisplayFor(stepItem => modelItem.Step)

        </div>
        }
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
