@model IEnumerable<Pantry.Models.SpoonacularViewModels.RecipeForListModel>

@{
    ViewData["Title"] = "Index";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsedIngredientCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MissedIngredientCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td id="@($"piechart{item.Id}")"></td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="@Url.Content($"https://spoonacular.com/recipeImages/{item.Id}-240x150.{item.ImageType}")" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsedIngredientCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MissedIngredientCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            

            <script type="text/javascript">
                // Load google charts
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);

                // Draw the chart and set the chart values
                function drawChart() {
                    var data = google.visualization.arrayToDataTable([
                        ['Ingredients You Need', 'Ingredients'],
                        ['Missed', @(item.MissedIngredientCount)],
                        ['Not missed', @(item.UsedIngredientCount)]
                    ]);

                    // Optional; add a title and set the width and height of the chart
                    var options = { 'title': 'Required Ingredients', 'width': 250, 'height': 200 };

                    // Display the chart inside the <div> element with id="piechart"
                    var chart = new google.visualization.PieChart(document.getElementById('@($"piechart{item.Id}")'));
                    chart.draw(data, options);
                }
            </script>




        }
    </tbody>
</table>
